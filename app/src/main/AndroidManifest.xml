<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.attendancesystem">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:name=".application.StudentAttendanceApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.DashboardActivity" />
        <activity android:name=".activity.StudentListActivity" />
        <activity
            android:name=".activity.AddStudentActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".activity.AttendanceListActivity" />
        <activity android:name=".activity.AttendanceDetailsActivity" />
        <activity android:name=".activity.AttendanceHistoryActivity" />
        <activity
            android:name=".activity.UnitActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".activity.UnitListActivity" />
        <activity
            android:name=".activity.ReadMeActivity"
            android:theme="@style/Theme.Intro" />
    </application>

</manifest>